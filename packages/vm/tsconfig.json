{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "declarationDir": "./dist",
        "outDir": "./dist",
        "target": "es2018",
        "module": "esnext",
        "declaration": true,
        "isolatedModules": false,
        "strict": false,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "lib": ["esnext"],
        "types": ["@manycore/idp-sdk"]
    },
    "include": ["src"]
}
